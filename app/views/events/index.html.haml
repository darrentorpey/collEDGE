- page_title "Events"

%div.basic_info_box.all_events{:style => 'width: 800px'}
  %h3 All Events
  .lower
    %ul
      - for event in @events
        %li
          %span.name= event.name.present? ? event.name : '&nbsp;'
          %ul.inline_event_nav
            %li= link_to 'Show', event
            %li= link_to 'Edit', edit_event_path(event)
            %li= link_to 'destroy', event, :confirm => 'Are you sure?', :method => :delete, :class => 'delete'
          %p.tags
            = event.properties_list_sorted

%p= link_to "New Event", new_event_path